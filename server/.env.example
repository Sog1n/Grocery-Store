# File .env mẫu cho server
# Database
MONGODB_URI=mongodb://admin:password123@mongodb:27017/taphoa_db?authSource=admin

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Server Port
PORT=8080

# JWT Secrets (thay đổi các giá trị này trong production)
JWT_SECRET_KEY=your-super-secret-jwt-key-here
REFRESH_TOKEN_SECRET_KEY=your-super-secret-refresh-token-key-here

# Cloudinary (nếu sử dụng)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service (nếu sử dụng)
RESEND_API=your-resend-api-key

# Stripe (nếu sử dụng)
STRIPE_SECRET_KEY=your-stripe-secret-key